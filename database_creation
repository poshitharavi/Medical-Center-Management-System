-- -----------------------------------------------------
-- Schema medical_center_management_system
-- -----------------------------------------------------
CREATE SCHEMA IF NOT EXISTS `medical_center_management_system` DEFAULT CHARACTER SET utf8 ;
USE `medical_center_management_system` ;

-- -----------------------------------------------------
-- Table `medical_center_management_system`.`doctors`
-- -----------------------------------------------------
DROP TABLE IF EXISTS `medical_center_management_system`.`doctors` ;

CREATE TABLE IF NOT EXISTS `medical_center_management_system`.`doctors` (
  `doctorID` INT NOT NULL AUTO_INCREMENT,
  `docorName` VARCHAR(45) NOT NULL,
  `doctorChanellingHospital` VARCHAR(100) NULL,
  `doctorContactNumber` VARCHAR(45) NULL,
  `doctorQualifications` VARCHAR(100) NULL,
  PRIMARY KEY (`doctorID`))
ENGINE = InnoDB;


-- -----------------------------------------------------
-- Table `medical_center_management_system`.`user_type`
-- -----------------------------------------------------
DROP TABLE IF EXISTS `medical_center_management_system`.`user_type` ;

CREATE TABLE IF NOT EXISTS `medical_center_management_system`.`user_type` (
  `userTypeID` INT NOT NULL AUTO_INCREMENT,
  `useTypeDis` VARCHAR(45) NULL,
  PRIMARY KEY (`userTypeID`))
ENGINE = InnoDB;


-- -----------------------------------------------------
-- Table `medical_center_management_system`.`user`
-- -----------------------------------------------------
DROP TABLE IF EXISTS `medical_center_management_system`.`user` ;

CREATE TABLE IF NOT EXISTS `medical_center_management_system`.`user` (
  `userID` INT NOT NULL AUTO_INCREMENT,
  `userName` VARCHAR(45) NULL,
  `userDOB` DATE NULL,
  `userPassword` VARCHAR(45) NULL,
  `userMobile` VARCHAR(45) NULL,
  `userEmail` VARCHAR(45) NULL,
  `userType` INT NOT NULL,
  PRIMARY KEY (`userID`),
  INDEX `fk_user_user_type_idx` (`userType` ASC),
  CONSTRAINT `fk_user_user_type`
    FOREIGN KEY (`userType`)
    REFERENCES `medical_center_management_system`.`user_type` (`userTypeID`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION)
ENGINE = InnoDB;


-- -----------------------------------------------------
-- Table `medical_center_management_system`.`doctor_shedule`
-- -----------------------------------------------------
DROP TABLE IF EXISTS `medical_center_management_system`.`doctor_shedule` ;

CREATE TABLE IF NOT EXISTS `medical_center_management_system`.`doctor_shedule` (
  `doctorSheduleID` INT NOT NULL AUTO_INCREMENT,
  `doctorSheduleTime` VARCHAR(45) NULL,
  `doctorSheduleWeek` VARCHAR(45) NULL,
  `doctorSheduleChanelCategory` VARCHAR(45) NULL,
  `doctorSheduleDoctor` INT NOT NULL,
  `doctorSheduleStatus` TINYINT(1) NULL DEFAULT 1,
  PRIMARY KEY (`doctorSheduleID`),
  INDEX `fk_doctor_shedule_doctors1_idx` (`doctorSheduleDoctor` ASC),
  CONSTRAINT `fk_doctor_shedule_doctors1`
    FOREIGN KEY (`doctorSheduleDoctor`)
    REFERENCES `medical_center_management_system`.`doctors` (`doctorID`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION)
ENGINE = InnoDB;


-- -----------------------------------------------------
-- Table `medical_center_management_system`.`appointments`
-- -----------------------------------------------------
DROP TABLE IF EXISTS `medical_center_management_system`.`appointments` ;

CREATE TABLE IF NOT EXISTS `medical_center_management_system`.`appointments` (
  `appointmentID` INT NOT NULL AUTO_INCREMENT,
  `appointmentShedule` INT NOT NULL,
  `appointmentDateTime` VARCHAR(45) NULL,
  `appointmentUser` INT NOT NULL,
  PRIMARY KEY (`appointmentID`),
  INDEX `fk_appointments_doctor_shedule1_idx` (`appointmentShedule` ASC),
  INDEX `fk_appointments_user1_idx` (`appointmentUser` ASC),
  CONSTRAINT `fk_appointments_doctor_shedule1`
    FOREIGN KEY (`appointmentShedule`)
    REFERENCES `medical_center_management_system`.`doctor_shedule` (`doctorSheduleID`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION,
  CONSTRAINT `fk_appointments_user1`
    FOREIGN KEY (`appointmentUser`)
    REFERENCES `medical_center_management_system`.`user` (`userID`)
    ON DELETE NO ACTION
    ON UPDATE NO ACTION)
ENGINE = InnoDB;


